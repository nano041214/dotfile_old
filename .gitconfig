[core]
	excludesfile = /Users/naomi-hidaka/.gitignore_global

[include]
    path = ~/.gitconfig.local

[color]
    ui = true

[pull]
  rebase = true

[alias]
co = checkout
# checkout長い…
st = status -sb
br = branch
# シンプルなstatus
pr = pull --rebase
# pull するときにmergeコミットを作らない
fo = fetch origin
ro = rebase origin
# branchでfoしてroすればmasterにrebaseできる
rc = rebase --continue
wd = diff --word-diff
# 単語単位のdiff
lg = log --graph --pretty=oneline --decorate --date=short --abbrev-commit --branches
# ログをtreeで表示(簡易tig)

[ghq]
	root = /Users/naomi-hidaka/src
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[merge "mergepbx"]
	name = Xcode project files merger
	driver = mergepbx %O %A %B
	note = auto-generated configuration by `cpad manifest ios`
